{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle cible{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/dashboard-bases.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
<div id="container" class="admin-dashboard">
    <div id="target">
        {% block dashboard %}{{ parent() }}{% endblock %}
        <div class="page-width">
        <h1>Créer une nouvelle cible</h1>
            <div class="form-container">
                {# {{ include('place/_form.html.twig') }} #}
                {{ form_start(form) }}
                {{ form_rest(form) }}
                <button class="btn btn-lg connect-button" type="submit">Créer</button>
                {{ form_end(form) }}
            </div>
        </div>

    </div>
    {% block footer %}{{ parent() }}{% endblock %}
</div>
{% endblock %}
