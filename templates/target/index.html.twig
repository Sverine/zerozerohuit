{% extends 'base.html.twig' %}

{% block title %}Cible{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/dashboard-bases.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
<div id="container" class="admin-dashboard">
    <div id="target">
        {% block dashboard %}{{ parent() }}{% endblock %}
        <div class="page-width">
            <div class="targets">
                <div class="header-table">
                    <h2>Cibles</h2>
                    {% if targets %}<button class="btn add-button"><a href="{{ path('target_new') }}">+   Ajouter une cible</a></button>{% endif %}
                </div>

                {% if targets %}
                <table class="table">
                    <thead>
                        <tr>
                            <th>Prénom</th>
                            <th>Nom</th>
                            <th>Date de naissance</th>
                            <th>Nom de code</th>
                            <th>Nationalité</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for target in targets %}
                        <tr>
                            <td>{{ target.firstName }}</td>
                            <td>{{ target.lastName }}</td>
                            <td>{{ target.dateBirth ? target.dateBirth|date('Y-m-d') : '' }}</td>
                            <td>{{ target.codeName }}</td>
                            <td>{{ target.nationality }}</td>
